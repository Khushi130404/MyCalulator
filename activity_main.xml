<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/black"
        android:text="0"
        android:textSize="60sp"
        android:textColor="#ffffff"
        android:editable="false"
        android:gravity="bottom|end"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/btAc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/roundbutton3"
            android:layout_margin="5sp"

            ></Button>

        <Button
            android:id="@+id/btBack"
            android:background="@drawable/roundbutton3"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BACK"
            android:textSize="25sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/btMod"
            android:background="@drawable/roundbutton3"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/btDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="รท"
            android:background="@drawable/roundbutton2"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"

            ></Button>

        <Button
            android:id="@+id/bt8"
            android:background="@drawable/roundbutton"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/bt9"
            android:background="@drawable/roundbutton"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/btMult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ร"
            android:background="@drawable/roundbutton2"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"

            ></Button>

        <Button
            android:id="@+id/bt5"
            android:background="@drawable/roundbutton"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/bt6"
            android:background="@drawable/roundbutton"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/btSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:background="@drawable/roundbutton2"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"

            ></Button>

        <Button
            android:id="@+id/bt2"
            android:background="@drawable/roundbutton"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/bt3"
            android:background="@drawable/roundbutton"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/btAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="@drawable/roundbutton2"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/btPar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="()"
            android:background="@drawable/roundbutton"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>


        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"

            ></Button>


        <Button
            android:id="@+id/btDot"
            android:background="@drawable/roundbutton"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

        <Button
            android:id="@+id/btEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:background="@drawable/roundbutton2"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_margin="5sp"
            ></Button>

    </LinearLayout>

</LinearLayout>